{
  "productName": "Twitch Desktop",
  "directories": {
    "output": "release/"
  },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
  "win": {
    "icon": "build",
    "target": [
      "nsis-web",
      "nsis",
      "portable"
    ],
    "publish": ["github"]
  },
  "mac": {
    "icon": "build",
    "category": "public.app-category.entertainment",
    "target": [
      "dmg",
      "zip"
    ],
    "publish": ["github"]
  },
  "linux": {
    "icon": "build/icon.icns",
    "category": "Video",
    "target": [
      "AppImage",
      "pacman",
      "deb"
    ],
    "publish": ["github"]
  },
  "pacman": {
    "publish": ["github"]
  }
}
